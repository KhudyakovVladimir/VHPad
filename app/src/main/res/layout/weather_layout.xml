<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
            android:id="@+id/textViewCity"
            android:layout_width="223dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:textSize="22dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCity" />

    <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="296dp"
            android:layout_height="103dp"
            android:gravity="center"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.608"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewWeather" android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/textViewPressure"
            android:layout_width="75dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="128dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewPressure"
            app:layout_constraintHorizontal_bias="0.06"/>


    <TextView
            android:id="@+id/textViewWind"
            android:layout_width="75dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="128dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewPressure"
            app:layout_constraintHorizontal_bias="0.066"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/textViewTemperature"
        app:layout_constraintStart_toEndOf="@+id/textViewTemperature"
        app:layout_constraintTop_toTopOf="@+id/textViewTemperature"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="39dp"
        android:layout_height="47dp"
        android:layout_marginEnd="52dp"
        android:gravity="start"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTemperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textViewTemperature"
        app:layout_constraintVertical_bias="0.336" />

    <ImageView
            android:layout_width="141dp"
            android:layout_height="141dp"
            android:id="@+id/imageViewWeather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTemperature"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="34dp"
            android:layout_height="31dp"
            android:id="@+id/imageViewPressure"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
            android:layout_marginTop="28dp"/>
    <ImageView
            android:layout_width="34dp"
            android:layout_height="31dp"
            android:id="@+id/imageViewWind"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
            android:layout_marginTop="104dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>